{
  "name": "toolsync",
  "displayName": "ToolSync",
  "description": "Local-first developer environment sync helper",
  "version": "0.0.2",
  "publisher": "tardis833",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git@github.com:TARDIS833/ToolSync.git"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:toolsync.hello",
    "onCommand:toolsync.init",
    "onCommand:toolsync.snapshot",
    "onCommand:toolsync.plan",
    "onCommand:toolsync.apply"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "toolsync.hello",
        "title": "ToolSync: 상태 확인"
      },
      {
        "command": "toolsync.init",
        "title": "ToolSync: 초기화"
      },
      {
        "command": "toolsync.snapshot",
        "title": "ToolSync: VS Code 스냅샷 저장"
      },
      {
        "command": "toolsync.plan",
        "title": "ToolSync: 동기화 계획 생성"
      },
      {
        "command": "toolsync.apply",
        "title": "ToolSync: 동기화 계획 적용 (VS Code)"
      }
    ],
    "configuration": {
      "title": "ToolSync",
      "properties": {
        "toolsync.syncRoot": {
          "type": "string",
          "default": "~/ToolSync",
          "description": "ToolSync 로컬 동기화 루트 경로"
        },
        "toolsync.tools": {
          "type": "array",
          "default": [
            "vscode",
            "cursor",
            "codex",
            "antigravity",
            "claude",
            "lmstudio"
          ],
          "items": {
            "type": "string"
          },
          "description": "동기화 대상 툴 목록"
        },
        "toolsync.allowEnvKeys": {
          "type": "array",
          "default": [
            "LANG",
            "LC_ALL",
            "TERM",
            "TZ"
          ],
          "items": {
            "type": "string"
          },
          "description": "동기화 허용 환경변수 키 목록"
        },
        "toolsync.mcp": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "VS Code 측 MCP 목록(메타데이터)"
        },
        "toolsync.skills": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "VS Code 측 Skill 목록(메타데이터)"
        },
        "toolsync.terminalTheme": {
          "type": "string",
          "default": "Default",
          "description": "터미널 테마 메타데이터"
        },
        "toolsync.propagateDelete": {
          "type": "boolean",
          "default": false,
          "description": "삭제 전파 여부(현재 미구현, 예약 옵션)"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "npm run compile",
    "package": "npm run compile && mkdir -p dist && vsce package --out dist/toolsync-${npm_package_version}.vsix",
    "lint": "eslint src --ext ts",
    "test": "echo \"No tests yet\""
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^9.20.1",
    "typescript": "^5.8.2"
  }
}
